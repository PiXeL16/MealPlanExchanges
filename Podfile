# Uncomment this line to define a global platform for your project
platform :ios, '9.0'

target 'MealPlanExchanges' do
  # Comment this line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for MealPlanExchanges
    
  # Persistence
  pod 'Firebase/Database'
  pod 'Firebase/Auth'

  # Logging
  pod 'CocoaLumberjack/Swift'
  
  # Color manipulation
  pod 'DynamicColor'

  # Reactive
  pod 'RxCocoa'
  pod 'RxSwift'
  # pod 'RxFirebase'

  # JSON Parser
  pod 'ModelMapper', '~> 1.0.3'

  target 'MealPlanExchangesTests' do
    inherit! :search_paths
    # Pods for testing
     pod 'Quick'
     pod 'Nimble'
  end

  target 'MealPlanExchangesUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
